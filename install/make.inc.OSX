CC = cc
CXX = mpicxx
CFLAGS = -Wall -fPIC -O2

F90 = mpif90
F90FLAGS = -Wall -fdefault-real-8 -fimplicit-none -fPIC

PYTHON = python3

ARCH = ar cr

LDD = $(CXX) -shared
LD = $(CXX) 
LDFLAGS = -fPIC -Wl,-rpath,/opt/local/lib

INCLUDE = -I/usr/local/include

LIBS = -L/opt/local/lib/gcc9 -lgfortran -lstdc++

HDF5_LIBS = /opt/local/lib/libhdf5.a -lz
NETCDF_LIBS = -lnetcdf

LAPACK = -llapack
